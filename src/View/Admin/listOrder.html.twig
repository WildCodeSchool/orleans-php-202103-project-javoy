
{% extends 'adminLayout.html.twig' %}

{% block stylesheet %}
<link rel="stylesheet" href="/assets/css/add-products.css">
{% endblock %}

{% block content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            <h1>Liste Commande</h1>
                <div class="row justify-content-center">
                    <div class="col p-5 m-10 order-form">            
                        {% for order in orders %}
                            <div class="card-header">
                                Commande NÂ°{{ order.id }}
                            </div>
                            <div class="row m-3">
                                    <div class="col-3 order-form">
                                        <div class="row align-items-center justify-content-center h-100 pt-2 m-1">
                                            <div class="col">
                                                <p class="text-center fw-bolder lh-1">{{ order.title }} </p>
                                                <p class="text-center fw-bolder lh-1"> {{ order.firstname }} </p>
                                                <p class="text-center fw-bolder lh-1"> {{ order.lastname }} </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        {{ order.detail }}
                                    </div>
                                    <div class="col-3">
                                            <div class="row">
                                                <select class="form-control custom-select" value= "{{ order.status_id }}" name="status" id="status" required>
                                                    {% for statusList in statusLists %}
                                                        <option>{{ statusList.name }}</option>
                                                    {% endfor %}
                                                  </select>

                                                <form action="" method="POST">
                                                    <div class="col-12 p-2 btn-group">
                                                    <a class="btn order-form">Mettre &agrave; jour</a>
                                                    </div>
                                                </form>
                                            </div>
                                    </div>
                            </div>
                        {% endfor %}
                </div>
            </div>                        
        </div>
    </div>
</div>
{% endblock %} 