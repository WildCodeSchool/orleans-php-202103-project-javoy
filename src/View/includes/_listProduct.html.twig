<div class = "container">
<div class = "row">
{% for product in products %}
    <div class ="col-sm-6">
      <div class="card">
        {{ product.image }}
        <div class="card-body">
          <h2 class="card-title">{{ product.category }}</h2>
          <p class="card-text">{{ product.description }}</p>
          <a href="#" class="btn btn-primary">Ajouter au panier</a>
        </div>
      </div>
    </div>
{% endfor %}
</div>
</div> 

