      <div class="card">
        {{product.image}}
        <div class="card-body">
          <h5 class="card-title">{{product.category}}</h5>
          <p class="card-text">{{product.description}}</p>
          <a href="#" class="btn btn-primary">Ajouter au panier</a>
        </div>
      </div>
      </div>
{% endfor %}
    </div>
</div>

{% endblock %}