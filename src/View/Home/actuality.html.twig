{% extends 'layout.html.twig' %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/actuality.css">
{% endblock %}

{% block content %}

	{% for actuality in actuality %}
		<div class="container">
			<div class="card actuality">
				<div class="row ">
					<div class="col-sm-5">
						<img class="card-img" src="{{ actuality.image }}" alt="{{ actuality.name }}">
					</div>
					<div class="col-sm-7">
						<div class="card-body">
							<h5 class="card-title">{{ actuality.name }}</h5>
							<p class="card-text">
								{{ actuality.article }}
							</p>
						</div>
					</div>
				</div>
			</div>
			<button type="button" class="btn btn-primary">Right Aligned Button</button>
		</div>
	{% else %}
		<li>Il n'y a aucune actualit√© pour le moment.</li>
	{% endfor %}

{% endblock %}
